<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/gold_proteo"
            android:gravity="center"
            android:elevation="10dp"
            >

            <TextView
                android:id="@+id/proteo_price_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Proteo_token_name"
                tools:layout_editor_absoluteX="63dp"
                tools:layout_editor_absoluteY="61dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:textSize="18sp"/>


            <ImageView
                android:id="@+id/ic_proteo"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="TODO"
                tools:src="@mipmap/ic_launcher_round" />



            <TextView
                android:id="@+id/proteo_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price_sample"
                tools:layout_editor_absoluteX="63dp"
                tools:layout_editor_absoluteY="61dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/proteo_index_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/proteo_index_label"
                tools:layout_editor_absoluteX="63dp"
                tools:layout_editor_absoluteY="61dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/proteo_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/proteo_index"
                tools:layout_editor_absoluteX="63dp"
                tools:layout_editor_absoluteY="61dp"
                android:gravity="center"
                android:layout_margin="5dp"/>

        </LinearLayout>

        <androidx.compose.ui.platform.ComposeView
            android:id="@+id/greeting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/m_dimens">

            <Button
                android:id="@+id/btn_unstake"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Unstake"
                android:layout_marginHorizontal="10dp">

            </Button>

            <Button
                android:id="@+id/btn_elite_ranking"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginHorizontal="10dp"
                android:text="Elite Ranking">

            </Button>

        </LinearLayout>

    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>