<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/l_dimens"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".fragments.FirstFragment">

    <TextView
        android:id="@+id/textview_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/l_dimens"
        android:layout_marginBottom="@dimen/l_dimens"
        android:textAlignment="center"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/l_dimens"
        android:layout_marginEnd="@dimen/l_dimens"
        android:background="@color/black"
        app:cardCornerRadius="@dimen/s_dimens"
        android:elevation="@dimen/xxs_dimens">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RÃ©ponse A"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next" />

    </androidx.cardview.widget.CardView>

</LinearLayout>
